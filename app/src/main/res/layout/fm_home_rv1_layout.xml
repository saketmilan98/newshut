<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:id="@+id/constraint1"
    android:layout_marginEnd="6dp"
    android:background="@color/appgraycolor">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:adjustViewBounds="true"
        android:id="@+id/iv1"
        android:scaleType="centerCrop"
        tools:background="@drawable/newshutdefaultimg"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        tools:text="\u0996\u09ac\u09b0"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@color/appgreencolor"
        android:textAlignment="center"
        android:paddingTop="2dp"
        android:paddingBottom="4dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv1"
        app:layout_constraintStart_toStartOf="@+id/iv1"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        tools:text="By Dibyendu - 30th August, 2019 rhrhrhrdh"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:drawableStart="@drawable/ic_profile"
        android:textAlignment="center"
        android:paddingTop="2dp"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toBottomOf="@+id/iv1"
        app:layout_constraintStart_toStartOf="@+id/iv1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>