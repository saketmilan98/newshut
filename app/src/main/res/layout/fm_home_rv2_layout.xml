<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constraint1"
    android:background="@color/white">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:id="@+id/iv1"
        android:scaleType="centerCrop"
        tools:background="@drawable/newshutdefaultimg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        tools:text="By Dibyendu - 30th August, 2019"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:drawableStart="@drawable/ic_profile"
        android:textAlignment="textStart"
        android:paddingTop="2dp"
        android:paddingBottom="4dp"
        android:drawablePadding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tv3"
        app:layout_constraintBottom_toBottomOf="@+id/iv1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv3"
        tools:text="\u09b0\u09be\u099c\u09c0\u09ac\u0995\u09c7 \u09a8\u09bf\u099c\u09c7\u09a6\u09c7\u09b0 \u0995\u09ac\u09cd\u099c\u09be\u09df \u09aa\u09c7\u09a4\u09c7 \u09ac\u09bf\u09b6\u09c7\u09b7 \u0985\u09ad\u09bf\u09af\u09be\u09a8\u09c7\u09b0 \u09aa\u09cd\u09b0\u09b8\u09cd\u09a4\u09c1\u09a4\u09bf\u09a4\u09c7 \u09b8\u09bf\u09ac\u09bf\u0986\u0987, \u09a6\u09bf\u09b2\u09cd\u09b2\u09bf \u09a5\u09c7\u0995\u09c7 \u098f\u09b2 \u09a8\u09a4\u09c1\u09a8 \u09a6\u09b2"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:paddingTop="2dp"
        android:paddingBottom="4dp"
        android:ellipsize="end"
        android:maxLines="4"
        app:layout_constraintTop_toTopOf="@+id/iv1"
        app:layout_constraintBottom_toTopOf="@+id/tv2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv1"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/appgraycolor"
        app:layout_constraintTop_toBottomOf="@+id/iv1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>